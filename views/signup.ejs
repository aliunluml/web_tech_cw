<div class = "main_section">

  <% if(invalidUsername==="true"){ %>
    <div class="alert">
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
      <strong>Username Unavailable: </strong> Please choose another one.
    </div>
  <% } %>
  <% if(invalidEmail==="true"){ %>
    <div class="alert">
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
      <strong>Email Unavailable: </strong> Please choose another one to sign up for a new account or log in to your account.
    </div>
  <% } %>

  <h2 class="page_description">
    Please fill out the following form to register.
  </h2>

  <div class = "form_class">
    <form action='/signup' method='post'>

      <div class="form-group">
        <label for="usernameInput"> Username (15 characters maximum): </label>
        <input id="usernameInput" class="form-control" name='username' placeholder="Your account username" maxlength="15" required>
      </div>

      <div class="form-group">
        <label for="nameInput"> Name: </label>
        <input id="nameInput" class="form-control" name='name' placeholder="Your full name" required>
      </div>

      <div class="form-group">
        <label for="emailInput"> Email: </label>
        <input id="emailInput" class="form-control" type='email' name='email' placeholder="Your email address" required>
      </div>

      <div class="form-group">
        <label for="passwordInput"> Password: </label>
        <input id="passwordInput" class="form-control" type='password' name='password' placeholder="Your password" required>
      </div>

      <div class="form-group">
        <label for="affiliationInput"> Affiliation: </label>
        <input id="affiliationInput" class="form-control" name='affiliation' placeholder="University, Company, etc.">
      </div>

      <div class="form-group">
        <label for="titleSelect"> Position: </label>
        <select id="titleSelect" name="title" class="form-control" id="exampleFormControlSelect1">
          <option value="" selected> Please select the one that applies you the most </option>
          <option value="undergraduate"> Undergraduate </option>
          <option value="postgraduate"> Postgraduate </option>
          <option value="postdoc"> Postdoc </option>
          <option value="lecturer"> Lecturer </option>
          <option value="seniorLecturer"> Senior Lecturer </option>
          <option value="reader"> Reader </option>
          <option value="professor"> Professor </option>
        </select>
      </div>

      <div class="form-group">
        <input type="checkbox" name="consent" value="true" required> I hereby agree with the
        <a href="/tos" title="Go to Terms of Service">
          Terms of Service
        </a>
        and the
        <a href="/privacy" title="Go to Privacy Policy">
          Privacy Policy
        </a>
        and give consent to the processing of my data by Future Academic Research.
      </div>

      <div class="form-group">
        <input type='submit' value='Sign Up' class = "sumbit_button">
      </div>

    </form>
  </div>
</div>
